<section class="shop">
  <div class="container shop-inner">
    <h2 class="shop-title">Pedidos pagos</h2>
    <div class="shop-topbar">
      <a href="/admin" class="shop-back">Voltar para dashboard</a>
    </div>
    {{#if count}}
    <div class="form-card">
      <div class="form-grid">
        <div class="form-field form-col table-wrap">
          <table class="data-table">
            <thead>
              <tr><th>Nome</th><th>Cidade</th><th>CPF</th><th>Produtos</th><th>Total</th><th>Pago em</th></tr>
            </thead>
            <tbody>
              {{#each rows}}
              <tr>
                <td>{{this.buyer.nome}}</td>
                <td>{{this.buyer.cidade}}</td>
                <td>{{this.buyer.cpf}}</td>
                <td>
                  {{#each this.items}}
                    <div>{{this.name}} ({{this.size}}) × {{this.qty}} — R${{this.price}}</div>
                  {{/each}}
                </td>
                <td>R${{this.total}}</td>
                <td>{{this.paid_at_br}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {{else}}
      <p class="insc-error">Nenhum pedido pago encontrado.</p>
    {{/if}}
  </div>
</section>
