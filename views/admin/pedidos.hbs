              <div class="product-item">
                <div class="product-head">
                  <span class="product-name">{{this.name}}</span>
                  <span class="product-type">{{this.type}}</span>
                </div>
                <div class="sizes-line">
                  {{#each this.sizes}}
                    {{#if @index}} â€¢ {{/if}}{{this}}
