<section class="shop">
  <div class="container shop-inner">
    <h2 class="shop-title">Inscri√ß√µes pagas</h2>
    <div class="shop-topbar">
      <a href="/admin" class="shop-back">Voltar para dashboard</a>
    </div>
    <div class="filter-bar" style="margin-bottom: 20px;">
      <div class="search-box">
        <span class="search-icon">üîç</span>
        <input type="text" id="tableFilter" class="search-input" placeholder="Filtrar por nome, CPF, idade..." autocomplete="off">
      </div>
    </div>
    {{#if count}}
    <div class="form-card">
      <div class="form-grid">
        <div class="form-field form-col table-wrap">
          <table class="data-table" id="inscTable">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Sexo</th>
                <th>Cidade/Par√≥quia</th>
                <th>WhatsApp</th>
                <th>CPF</th>
                <th>Arquivos</th>
              </tr>
            </thead>
            <tbody>
              {{#each rows}}
              <tr>
                <td>{{this.nome}}</td>
                <td>{{this.idade}}</td>
                <td>{{this.sexo}}</td>
                <td>{{this.endereco}}</td>
                <td><a href="{{this.whatsapp_link}}" target="_blank" style="color: #0b0b0b; text-decoration: underline;">{{this.whatsapp}}</a></td>
                <td>{{this.cpf}}</td>
                <td>
                  <div class="action-group">
                    <a href="/admin/inscricao/{{this.id}}/arquivo/doc" target="_blank" class="action-btn" title="Documento">
                      <span class="btn-icon">üìÑ</span> Doc
                    </a>
                    <a href="/admin/inscricao/{{this.id}}/arquivo/foto" target="_blank" class="action-btn" title="Foto Pessoal">
                      <span class="btn-icon">üë§</span> Foto
                    </a>
                    <a href="/admin/inscricao/{{this.id}}/arquivo/santo" target="_blank" class="action-btn" title="Foto do Santo">
                      <span class="btn-icon">‚úùÔ∏è</span> Santo
                    </a>
                    <a href="/admin/inscricao/{{this.id}}/arquivo/zip" class="action-btn" title="Baixar Tudo (ZIP)">
                      <span class="btn-icon">üì¶</span> ZIP
                    </a>
                  </div>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {{else}}
      <p class="insc-error">Nenhuma inscri√ß√£o paga encontrada.</p>
    {{/if}}
  </div>
  <style>
    .table-wrap { overflow-x: auto; }
    .data-table { width: 100%; border-collapse: separate; border-spacing: 0; min-width: 600px; }
    .data-table th, .data-table td { padding: 12px; text-align: left; border-bottom: 1px solid #eee; }
    .data-table th { background: #f9f9f9; font-weight: 900; text-transform: uppercase; font-size: 13px; letter-spacing: 0.5px; }
    .action-group { display: flex; gap: 8px; flex-wrap: wrap; }
    .action-btn {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 6px 10px;
      background: #ffeb3b;
      color: #0b0b0b;
      border: 1px solid #0b0b0b;
      border-radius: 6px;
      text-decoration: none;
      font-size: 12px;
      font-weight: 900;
      box-shadow: 0 2px 0 rgba(0,0,0,0.4);
      transition: none;
    }
    .action-btn:active { transform: translateY(1px); box-shadow: 0 1px 0 rgba(0,0,0,0.4); }
    .btn-icon { font-size: 14px; line-height: 1; }

    /* Search Box Styles */
    .search-box { position: relative; max-width: 400px; width: 100%; }
    .search-input {
      width: 100%;
      padding: 12px 16px 12px 42px;
      font-size: 15px;
      border: 2px solid #0b0b0b;
      border-radius: 8px;
      outline: none;
      background: #fff;
      color: #0b0b0b;
      font-family: inherit;
      box-shadow: 4px 4px 0 rgba(0,0,0,0.1);
      transition: all 0.2s ease;
    }
    .search-input:focus {
      box-shadow: 4px 4px 0 #ffeb3b;
      border-color: #0b0b0b;
    }
    .search-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 16px;
      color: #0b0b0b;
      opacity: 0.6;
      pointer-events: none;
    }
  </style>
  <script>
    document.getElementById('tableFilter').addEventListener('keyup', function() {
      const val = this.value.toLowerCase();
      const rows = document.querySelectorAll('#inscTable tbody tr');
      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(val) ? '' : 'none';
      });
    });
  </script>
</section>
