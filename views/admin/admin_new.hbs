<section class="shop">
  <div class="container shop-inner">
    <h2 class="shop-title">Criar novo administrador</h2>
    <div class="shop-topbar">
      <a href="/admin" class="shop-back">Voltar para dashboard</a>
    </div>
    {{#if error}}<p class="insc-error">{{error}}</p>{{/if}}
    <div class="form-card">
      <form method="post" action="/admin/admins/new">
        <div class="form-grid">
          <label class="form-field"><span>Nome</span><input type="text" name="nome" required/></label>
          <label class="form-field"><span>Email</span><input type="email" name="email" required/></label>
          <label class="form-field"><span>Senha</span><input type="password" name="senha" required/></label>
        </div>
        <div class="form-actions"><button class="btn" type="submit">Criar administrador</button></div>
      </form>
    </div>
  </div>
</section>
