<script>
(function(){
  const card = document.querySelector('.team-diretor');
  const overlay = document.getElementById('bioOverlay');
  const modal = document.getElementById('bioModal');
  const closeBtn = document.getElementById('bioClose');
  const open = () => { if (overlay) overlay.hidden = false; if (modal) modal.hidden = false; };
  const close = () => { if (overlay) overlay.hidden = true; if (modal) modal.hidden = true; };
  if (card) card.addEventListener('click', (e) => { e.preventDefault(); open(); });
  if (overlay) overlay.addEventListener('click', close);
  if (closeBtn) closeBtn.addEventListener('click', close);
})();
</script>

